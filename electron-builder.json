{
  "appId": "com.hkl.modmanager",
  "productName": "HKL",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "public/resources/**/*",
    "build/icon.ico"
  ],
  "extraResources": [
    {
      "from": "public/resources",
      "to": "resources"
    },
    {
      "from": "public/icon.ico",
      "to": "icon.ico"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon.ico",
    "signAndEditExecutable": false,
    "signingHashAlgorithms": []
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "artifactName": "HKL-Setup-${version}.exe"
  },
  "portable": {
    "artifactName": "HKL.exe"
  }
}
